## -*- coding: utf-8 -*-

<%def name="status(desc)" buffered="True">
    % if desc == '0':
        <span class="label label-inverse">Draft</span>
    % elif desc == '1':
        <span class="label label-important">Work in Progress</span>
    % elif desc == '2':
        <span class="label label-warning">Work in Progress</span>
    % elif desc == '3':
        <span class="label label-info">Almost done</span>
    % elif desc == '4':
        <span class="label label-success">Done</span>
    % elif desc == '5':
        <span class="label label-success">Production Ready</span>
    % elif desc == '-1':
        <span class="label">Abandoned</span>
    % else:
        <span class="label">${desc}</span>
    % endif
</%def>
