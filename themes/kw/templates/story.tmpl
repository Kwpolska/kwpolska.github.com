## -*- coding: utf-8 -*-
<%inherit file="post.tmpl"/>
<%namespace name="disqus" file="disqus_helper.tmpl"/>
<%namespace name="project" file="project_helper.tmpl"/>
<%block name="content">
%if title:
    <header class="page-header">
    <h1>${title}</h1>
    </header>
%endif
    <%!
    import re
    %>

    <%
        text = post.text(lang)
        matches = re.compile('PROJSTAT\[.*?\]').findall(text)
        for i in matches:
            text = text.replace(i, project.status(i[9:-1]))
    %>
    ${text}
<!--
%if enable_comments:
    ${disqus.html_disqus(post.permalink(absolute=True), post.title(lang), post.base_path)}
%endif
-->
</%block>
